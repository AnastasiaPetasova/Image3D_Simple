<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="com.anastasia.app.image3d.Image3dController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Canvas fx:id="imageCanvas" GridPane.rowIndex="0"/>

    <HBox GridPane.rowIndex="1" spacing="20" alignment="CENTER_RIGHT">

        <Button fx:id="rotateUpButton" text="Поворот вверх"/>
        <Button fx:id="rotateDownButton" text="Поворот вниз"/>

        <CheckBox fx:id="fillPolygonsCheckBox" text="Закрашивать фигуру"/>

    </HBox>
</GridPane>